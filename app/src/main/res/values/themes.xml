<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PruebaMusica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!-- AppBar style -->
        <item name="android:actionBarStyle">@style/AppBarStyle</item>

        <!-- Floating action button style -->
        <item name="materialButtonStyle">@style/FloatingActionButtonStyle</item>

        <!-- Tab layout style -->
        <item name="tabStyle">@style/TabLayoutStyle</item>

        <!-- NavigationView style -->
        <item name="navigationViewStyle">@style/NavigationViewStyle</item>

    </style>

    <!-- Custom AppBar style -->
    <style name="AppBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/purple_500</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- Custom Floating Action Button style -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>

    <!-- Custom Tab Layout style -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/teal_200</item>
        <item name="tabSelectedTextColor">@color/teal_200</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <!-- Custom NavigationView style -->
    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
